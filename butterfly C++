#include <iostream>
using namespace std;


int main() {
    int n = 10;
    for(int i = 1; i <= n; i++){
        for(int j = i; j > 0; j--){
            cout << '*' << ' ';
        }
        for(int k = n - i; k > 0; k--)
            if(k <= i){
                cout << '*' << ' ';
            }
            else{
                cout << ' ' << ' ';
            }
    cout << endl;
    if(i == n/2){
        break;
    } 

    }
   for(int i = n/2; i > 0; i--){
        for(int j = i; j > 0; j--){
            cout << '*' << ' ';
        }
        for(int k = n - i; k > 0; k--)
            if(k <= i){
                cout << '*' << ' ';
            }
            else{
                cout << ' ' << ' ';
            }
    cout << endl;

    }

    


   return 0;
}
