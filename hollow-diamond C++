#include <iostream>
using namespace std;


int main() {
    int t = 2;
    for(int i = 1; i <= t; i++){
        for(int m = 1; m <= t - i; m++){
            cout << ' ' << ' ';}
        for (int j = 1; j <= i; j++){
        if(j == 1){
            cout << '*' << ' ';
        }
        else{
            cout << ' ' << ' ';
        }}
        for (int k = i - 1; k > 0; k--){
        if(k == 1){
            cout << '*' << ' ';
        }
        else{
            cout << ' ' << ' ';
        }}
    cout << endl;
    if(i == t){
        break;
    }}
    for(int i = t - 1; i >= 0; i--){
        for(int m = 1; m <= t - i; m++){
            cout << ' ' << ' ';}
        for (int j = 1; j <= i; j++){
        if(j == 1){
            cout << '*' << ' ';
        }
        else{
            cout << ' ' << ' ';
        }}
        for (int k = i - 1; k > 0; k--){
        if(k == 1){
            cout << '*' << ' ';
        }
        else{
            cout << ' ' << ' ';
        }}
    cout << endl;}
   return 0;
}
